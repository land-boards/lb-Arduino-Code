/////////////////////////////////////////////////////////////////////////////////////////////
// PROTO16I2CBlink Example code
// Blink LED
// 2019-03-03 - Tested with LandBoards_MCP23017 library v1.0.0
// 2019-03-03 - Working on STM32F1
/////////////////////////////////////////////////////////////////////////////////////////////

#include "LandBoards_MCP23017.h"

LandBoards_MCP23017 mcp;   // Uses the LandBoards MCP23017 library

/////////////////////////////////////////////////////////////////////////////////////////////
//  setup() - Set bit to Output
/////////////////////////////////////////////////////////////////////////////////////////////

void setup()
{
  mcp.begin(0);      // use default chip offset 0 (Adafruit library adds 0x20)
  mcp.pinMode(0, OUTPUT);
}

/////////////////////////////////////////////////////////////////////////////////////////////
// loop() - flip the pin up and down around forever one at a time
/////////////////////////////////////////////////////////////////////////////////////////////

void loop()
{
  mcp.digitalWrite(0, HIGH);
  delay(500);
  mcp.digitalWrite(0, LOW);
  delay(500);
}
